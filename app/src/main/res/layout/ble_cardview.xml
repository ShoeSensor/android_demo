<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@android:color/background_light"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="8dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/bleIv"
                android:layout_marginTop="-4dp"
                android:paddingBottom="@dimen/padding_default"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/devNameTv"
                        android:text="@string/device_name"
                        android:paddingLeft="@dimen/padding_default"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/devAddrTv"
                        android:text="@string/address_name"
                        android:paddingLeft="@dimen/padding_default"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/manNamTv"
                        android:text="@string/manufacturer_name"
                        android:paddingLeft="@dimen/padding_default"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rssiTv"
                        android:text="@string/rssi_name"
                        android:paddingLeft="@dimen/padding_default"
                        android:paddingBottom="@dimen/padding_default"/>

            </LinearLayout>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="10dp">

                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Connect"
                        android:id="@+id/connSwitch"
                        android:checked="false"
                        android:enabled="false"
                        android:clickable="true"
                        android:layout_gravity="right"
                        android:layout_alignParentEnd="true"
                        android:paddingBottom="@dimen/padding_default"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>